<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<Scene fill="#fffffffa" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.Controller">
    <AnchorPane prefHeight="100.0" prefWidth="250.0">
      <children>
         <VBox layoutY="40.0" prefHeight="20.0" prefWidth="250.0">
            <children>
               <HBox prefHeight="20.0" prefWidth="250.0">
                  <children>
                     <TextField fx:id="text1" prefHeight="20.0" prefWidth="100.0" />
                     <Button fx:id="button" mnemonicParsing="false" onMouseClicked="#onClick" prefHeight="20.0" prefWidth="50.0" text="-&gt;" />
                     <TextField fx:id="text2" prefHeight="20.0" prefWidth="100.0"  />
                  </children>
               </HBox>
            </children>
         </VBox>
      </children></AnchorPane>
</Scene>
